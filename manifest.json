{
  "manifest_version": 3,
  "name": "LinkedIn Job Crawler",
  "version": "1.0",
  "description": "Tự động thu thập thông tin việc làm từ LinkedIn",
  "permissions": ["scripting", "downloads", "storage", "activeTab"],
  "host_permissions": ["https://www.linkedin.com/jobs/search/*"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/search/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "LinkedIn Crawler"
  }
}
